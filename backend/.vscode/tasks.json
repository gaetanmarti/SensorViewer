{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/backend.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
		{
            "label": "copy",
            "type": "shell",
            "command": "scp",
            "args": [
                "-r",
                "${workspaceFolder}/bin/Debug/net9.0/*",
                "pi@192.168.4.50:~/backend/"
            ]
        },
        {
            "label": "build and copy",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build",
                "copy"
            ]
        },
    ]
}
